{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ZORBOX Report Schema (MVP)",
  "type": "object",
  "properties": {
    "id": {"type": "string"},
    "title": {"type": "string"},
    "summary": {"type": "string"},
    "file": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "size": {"type": "integer"},
        "sha256": {"type": "string"}
      },
      "required": ["name", "size"]
    },
    "static": {"type": "object"},
    "sandboxes": {"type": "array"},
    "ti": {"type": "object"},
    "score": {
      "type": "object",
      "properties": {
        "total": {"type": "integer"},
        "level": {"type": "string"},
        "rules": {"type": "array"}
      }
    },
    "ai": {
      "type": "object",
      "properties": {
        "total": {"type": "integer"},
        "features": {"type": "object"},
        "top": {"type": "array"},
        "weights": {"type": "object"}
      }
    }
  },
  "required": ["id", "file", "score"]
}
